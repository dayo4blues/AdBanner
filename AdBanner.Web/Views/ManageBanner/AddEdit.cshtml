@model AdBanner.Data.ViewModel.BannerViewModel
@{
    ViewData["Title"] = "Manage Banner";
}



        <div class="nk-block-head">
            <div class="nk-block-head-content">
                <h4 class="title nk-block-title">Banner</h4>
            </div>
        </div>
       
        <form method="post" novalidate enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <input type="hidden" name="Id" asp-for="Id" value="@Model.Id" />

                                       

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="form-label col-sm-3" for="email-address-1">Title</label>
                            <div class="col-sm-9">
                                <input type="text" name="Title" asp-for="Title" required class="form-control" data-validation-required-message="This field is required" placeholder="Title">
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label col-sm-3" for="email-address-1">Image Url</label>
                            <div class="col-sm-9">
                                <input type="file" accept = "image/png, image/gif, image/jpeg" class="form-control-file" name="UploadImage" asp-for="UploadImage" required data-validation-required-message="This field is required" placeholder="Image Url">
                                @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label col-sm-3" for="email-address-1">Link Url</label>
                            <div class="col-sm-9">
                                <input type="text" name="LinkUrl" asp-for="LinkUrl" required class="form-control" data-validation-required-message="This field is required" placeholder="Link Url">
                                @Html.ValidationMessageFor(model => model.LinkUrl, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label col-sm-2" for="email-address-1">Online</label>
                            <div class="col-sm-3">
                                <input type="checkbox" class="form-control-sm" name="Online" asp-for="Online">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">
                                @if (Model.Id > 0)
                                {
                                    <input type="submit" name="btnADD" style="width:100px" class="btn btn-sm btn-primary btn-block" id="btnADD" value="Update" />

                                }
                                else
                                {
                                    <input type="submit" name="btnADD" style="width:100px" class="btn btn-sm btn-primary btn-block" id="btnADD" value="Submit" />

                                }

                            </div>
                            <div class="col-sm-2">
                                <a asp-action="Index" class="btn btn-sm  btn-danger btn-block" asp-controller="ManageBanner">Close</a>                                
                            </div>
                        </div>
                    </div>
                </div>
           

        </div>
     
              

        
        </form>


  



